<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." default="netbeans" name="ruby.testrunner">
    <description>Builds, tests, and runs the project org.netbeans.modules.ruby.testrunner</description>
    <import file="nbproject/build-impl.xml"/>
    <target name="release" depends="init">
        <copy todir="${cluster}" file="release/nb_test_helper.rb"/>
        <copy todir="${cluster}" file="release/nb_test_mediator.rb"/>
        <copy todir="${cluster}" file="release/nb_test_runner.rb"/>
        <copy todir="${cluster}" file="release/nb_suite_runner.rb"/>
        <copy todir="${cluster}" file="release/nb_rspec_mediator.rb"/>
        <copy todir="${cluster}" file="release/nb_autotest_loader.rb"/>
        <copy todir="${cluster}" file="release/nb_autospec_loader.rb"/>
    </target>
</project>
